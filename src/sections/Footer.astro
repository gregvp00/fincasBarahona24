---
import { Image } from "astro:assets";
import logo from "/public/hero-logo.svg";

import { getI18N } from "@/i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer class="bg-white">
  <div class="py-16 mx-auto w-full md:max-w-[80%] lg:max-w-[70%] px-8">
    <div
      class="mb-12 grid grid-cols-2 gap-8 md:mb-16 md:grid-cols-8 lg:grid-cols-12"
    >
      <div class="col-span-6">
        <a href="/">
          <Image src={logo} alt="logo" height="60" />
        </a>
      </div>
      <div class="col-span-6">
        <div class="grid grid-cols-2 md:grid-cols-8 lg:grid-cols-12">
          {
            i18n.FOOTER.map((footerLinks) => (
              <div class="col-span-1 md:col-span-4">
                <h3 class="font-bold text-base mb-2">{footerLinks.title}</h3>
                <ul class="mt-4">
                  {footerLinks.items.map((footerItem) => (
                    <li class="gap-2">
                      <a
                        class="mb-2 block w-auto font-medium transition-colors duration-300 hover:text-blue-500"
                        href={footerItem.href}
                        target={footerItem.target}
                      >
                        {footerItem.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
